// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Permission {
  id         String @id @default(cuid())
  guildId    String
  userId     String
  permission String

  @@index([guildId, userId])
}

model CustomCommand {
  id       String  @id @default(cuid())
  guildId  String
  name     String
  response String
  embed    Boolean @default(false)

  @@unique([guildId, name])
}

model Reminder {
  id           String   @id @default(cuid())
  guildId      String
  channelId    String
  messageId    String
  userId       String
  time         DateTime
  reminderText String

  @@index([guildId, userId])
}

model UserSettings {
  id       String  @id @default(cuid())
  userId   String
  timezone String?

  @@unique([userId])
}

model GuildSettings {
  id       String  @id @default(cuid())
  guildId  String
  timezone String?
  prefix   String?

  @@unique([guildId])
}
